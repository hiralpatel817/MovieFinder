<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityDefaultTransition</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActivityDefaultTransition" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@transition/slide_in_right</item>
        <item name="android:activityCloseEnterAnimation">@transition/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@transition/slide_out_right</item>
    </style>

    <style name="BaseTextStyle">
        // Add customizations here for text styles such as custom font and brand guidelines
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BaseTextStyle.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BaseTextStyle.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BaseTextStyle.Large">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BaseTextStyle.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseTextStyle.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseTextStyle.Large.Bold">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
